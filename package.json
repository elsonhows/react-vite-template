{
  "name": "react-vite-template",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "generate-routes": "tsr generate",
    "watch-routes": "tsr watch",
    "dev": "vite --open --port 3000 && npm run watch-routes",
    "build": "tsc -b && vite build && npm run generate-routes ",
    "test": "vitest",
    "e2e:run": "playwright test",
    "e2e:watch": "playwright test --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "preview": "import-meta-env -x .env.example && vite preview",
    "prepare": "husky",
    "commit": "git add . && cz"
  },
  "dependencies": {
    "@mantine/core": "7.11.2",
    "@mantine/hooks": "7.11.2",
    "@tanstack/react-query": "5.51.9",
    "@tanstack/react-router": "1.45.4",
    "immer": "10.1.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "redaxios": "0.5.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@import-meta-env/cli": "0.6.9",
    "@import-meta-env/unplugin": "0.5.2",
    "@playwright/test": "1.45.3",
    "@tanstack/eslint-plugin-query": "5.51.9",
    "@tanstack/react-query-devtools": "5.51.9",
    "@tanstack/router-cli": "1.45.8",
    "@tanstack/router-devtools": "1.45.4",
    "@tanstack/router-plugin": "1.45.3",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.4.8",
    "@testing-library/react": "16.0.0",
    "@testing-library/user-event": "14.5.2",
    "@total-typescript/ts-reset": "0.5.1",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/node": "22.0.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.15.0",
    "@typescript-eslint/parser": "7.15.0",
    "@vitejs/plugin-react": "4.3.1",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.7",
    "husky": "9.1.0",
    "jsdom": "24.1.1",
    "lint-staged": "15.2.7",
    "prettier": "3.3.3",
    "typescript": "5.2.2",
    "vite": "5.3.4",
    "vitest": "2.0.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.19.0"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
